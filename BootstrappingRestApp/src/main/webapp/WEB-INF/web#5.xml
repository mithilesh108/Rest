<web-app>
	<display-name>Archetype Created Web Application</display-name>
	
	<!-- #5 bootstrapping for rest apps, if we config below then nothing else required only resources class required
	resources class obj will create req per obj model
	//@ApplicationPath("/api/*")  public class MyApplication extends Application implementation not required  -->
  <servlet>
  <servlet-name>jakarta.ws.rs.core.Application</servlet-name>
  </servlet>

	<servlet-mapping>
		<servlet-name>jakarta.ws.rs.core.Application</servlet-name>
		<url-pattern>/api/*</url-pattern>
	</servlet-mapping>

</web-app>
